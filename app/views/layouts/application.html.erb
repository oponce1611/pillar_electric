<!DOCTYPE html>
<html>
  <head>
    <title>Pillar Electric, LLC | Tempe, AZ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-146811168-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'UA-146811168-1');
    </script>
  </head>

  <body>
    <div class="container">
      <div class="mb-5">
        <%= link_to root_path do
          image_tag "PILLAR_ELECTRIC_BANNER.svg", class:'mx-auto d-block', width: "600"
        end %>
        <ul class="nav justify-content-center">
          <li class="nav-item">
            <%= link_to 'Gallery', gallery_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'About', about_path, class: 'nav-link' %>
          </li>
        </ul>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
